{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true
        /* Skip type checking all .d.ts files. */
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
