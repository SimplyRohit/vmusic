{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
